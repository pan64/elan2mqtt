{
  "name": "eLAN MQTT",
  "version": "1.15",
  "slug": "elan2mqtt",
  "description": "MQTT gateway for eLAN",
  "arch": ["armhf", "armv7", "aarch64", "amd64", "i386"],
  "startup": "before",
  "boot": "auto",
  "options": {
    "eLanURL": "http://192.168.3.136",
    "MQTTserver": "mqtt://elan:elan@192.168.3.176",
    "username": "user",
    "password": "user",
    "log_level": "trace",
    "disable_autodiscovery": "false",
    "mqtt_id": "elan"
  },
  "schema": {
    "eLanURL": "str",
    "MQTTserver": "str",
    "username": "str",
    "password": "str",
    "log_level": "match(^(trace|debug|info|notice|warning|error|fatal)$)",
    "disable_autodiscovery": "bool?",
    "mqtt_id": "str?"
  },
  "environment": {
    "LOG_FORMAT": "{LEVEL}: {MESSAGE}"
  }
}
